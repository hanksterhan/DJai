{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@common/*": ["common/src/*"]
        },
        "rootDir": ".",
        "module": "commonjs",
        "target": "ES6",
        "lib": ["es6", "dom", "es2021"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    }
}
